<div class="row">
  <div class="col-xs-12">
    <h2>Add a Burger</h2>
      <form class="create-update-form" action="/burger/create" method="POST", id= "form1">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button type="submit">Add burger</button>
      </form>
  </div>
</div>
<div class="row">
  <div class="col-xs-6">
  <h2>Burgers That Are Ready to Eat!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
         {{this.burger_name}}
       
          <form action="/burgers/update?_method=PUT" method="POST">
            <input type="hidden" name="burger_id" value={{this.id}}>
            <button type="submit">Submit!</button>
          </form>

          {{!-- {{> burgers/delete-burger}} --}}
        </li>
      {{/unless}}
    {{/each}}
  </ul>
  </div>
  <div class="col-xs-6">
    <h2>Burgers That Are Devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
           <strong><li>
            {{this.burger_name}}
      
             {{!--  <type="text"<b>{{this.burger_name}} --}}
             

              
            

            {{!-- {{> burgers/delete-burger}} --}}
          </li></strong>
           
        {{/if}}
      {{/each}}
    </ul>
    </div>
</div>
